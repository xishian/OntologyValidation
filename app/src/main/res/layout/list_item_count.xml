<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    app:contentPadding="5dp"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_item_count_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Label"
            android:textSize="18sp"
            android:textColor="#ff0000"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
        <View
            android:id="@+id/item_count_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/tv_item_count_label"
            android:background="@color/default_divider"/>
        <TextView
            android:id="@+id/tv_item_count_info"
            android:text="Info"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_below="@id/item_count_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>